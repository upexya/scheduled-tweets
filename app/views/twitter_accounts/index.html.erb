<div class="mt-4 d-flex justify-content-between align-items-center">
  <h1> Twitter Accounts </h1>
  <% if @twitter_accounts.count.eql?(0) %>
    <%= form_tag("/auth/twitter", method: "post", data: {turbo: false}) do %>
      <button type="submit" class= "btn btn-primary">Connect a Twitter account</button>
    <% end %>
  <% end %>
</div>
<div class="list-group mt-4">
  <% @twitter_accounts.each do |account| %>
    <div 
      class="d-flex justify-content-between align-items-center list-group-item list-group-item-action"
      style="max-width: 500px;"
    >
      <div class="d-flex align-items-center">
        <%= image_tag account.image, class: "rounded-circle me-2" %>
        <h5 class="mb-1">
          <%= link_to "@#{account.username}", "https://twitter.com/#{account.username}", target: :_blank%>
        </h5>
      </div>
      <%= button_to "Disconnect", account, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
    </div>
  <% end %>
</div>
